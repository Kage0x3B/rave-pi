{
    "name": "@kage0x3b/ravepi",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "turbo run dev",
        "dev:web": "turbo run dev --filter=@ravepi/web",
        "dev:daemon": "turbo run dev --filter=@ravepi/led-daemon",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "turbo run typecheck"
    },
    "devDependencies": {
        "@ravepi/eslint-config": "workspace:*",
        "@ravepi/tsconfig": "workspace:*",
        "prettier": "^3.4.2",
        "prettier-plugin-svelte": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.9",
        "turbo": "^2.3.4",
        "typescript": "^5.8.3"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=22"
    }
}
